.responsive-box.centered
  .flex.column.align-items-center.devise.box
    %a.logo{href: '/'}
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'full-width' }) do |f|
      = render partial: 'devise/shared/errors', locals: { resource: resource }
      = f.hidden_field :reset_password_token
      .control
        = f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New password", class: 'form-control'
      .control
        %button.btn.btn-primary.full-width
          = t('admin.forgotten.edit_submit')
    = render partial: 'devise/shared/try_sign_in'